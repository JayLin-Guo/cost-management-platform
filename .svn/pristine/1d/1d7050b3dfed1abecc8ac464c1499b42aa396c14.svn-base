            <div
              v-for="(lane, index) in gridData.swimlanes"
              :key="`h-line-${lane.id}`"
              class="grid-line-horizontal"
              :style="{
                top: `${index * GRID_CONFIG.SWIMLANE_HEIGHT}px`,
