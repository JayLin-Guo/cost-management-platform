/**
 * 全局SCSS变量 - 暗色主题
 */

// CSS 变量定义
:root {
  // 主题色 - 标准亮蓝色
  --primary-color: #3b82f6;
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --error-color: #ef4444;
  --info-color: #3b82f6;

  // 中性色 - 标准深灰色风格
  --body-background: #1e1e1e;
  --component-background: #252526;
  --component-background-light: #2d2d30;
  --text-color: rgba(255, 255, 255, 0.87);
  --text-color-secondary: rgba(255, 255, 255, 0.6);
  --disabled-color: rgba(255, 255, 255, 0.3);
  --border-color: #3e3e42;
  --border-color-light: #4a4a4e;
  --divider-color: rgba(255, 255, 255, 0.08);
  --hover-background: #37373d;
  --active-background: #3e3e42;

  // 字体
  --font-family:
    'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑',
    Arial, sans-serif;
  --font-size-base: 14px;
  --font-size-sm: 12px;
  --font-size-lg: 16px;
  --font-size-xl: 20px;
  --font-size-xxl: 24px;

  // 行高
  --line-height-base: 1.5;
  --line-height-lg: 2;
  --line-height-sm: 1.2;

  // 边框半径
  --border-radius-base: 4px;
  --border-radius-sm: 2px;
  --border-radius-lg: 8px;
  --border-radius-circle: 50%;

  // 间距
  --spacing-unit: 8px;
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  --spacing-xxl: 48px;

  // 阴影
  --shadow-1: 0 2px 8px rgba(0, 0, 0, 0.45);
  --shadow-2: 0 4px 12px rgba(0, 0, 0, 0.45);
  --shadow-3: 0 6px 16px rgba(0, 0, 0, 0.45);
}

// Sass 变量（向后兼容）
$primary-color: var(--primary-color);
$success-color: var(--success-color);
$warning-color: var(--warning-color);
$error-color: var(--error-color);
$info-color: var(--info-color);
$body-background: var(--body-background);
$component-background: var(--component-background);
$text-color: var(--text-color);
$text-color-secondary: var(--text-color-secondary);
$disabled-color: var(--disabled-color);
$border-color: var(--border-color);
$divider-color: var(--divider-color);
$font-family: var(--font-family);
$font-size-base: var(--font-size-base);
$font-size-sm: var(--font-size-sm);
$font-size-lg: var(--font-size-lg);
$font-size-xl: var(--font-size-xl);
$font-size-xxl: var(--font-size-xxl);
$line-height-base: var(--line-height-base);
$line-height-lg: var(--line-height-lg);
$line-height-sm: var(--line-height-sm);
$border-radius-base: var(--border-radius-base);
$border-radius-sm: var(--border-radius-sm);
$border-radius-lg: var(--border-radius-lg);
$border-radius-circle: var(--border-radius-circle);
$spacing-unit: var(--spacing-unit);
$spacing-xs: var(--spacing-xs);
$spacing-sm: var(--spacing-sm);
$spacing-md: var(--spacing-md);
$spacing-lg: var(--spacing-lg);
$spacing-xl: var(--spacing-xl);
$spacing-xxl: var(--spacing-xxl);
$shadow-1: var(--shadow-1);
$shadow-2: var(--shadow-2);
$shadow-3: var(--shadow-3);

// 断点
$screen-xs: 480px;
$screen-sm: 576px;
$screen-md: 768px;
$screen-lg: 992px;
$screen-xl: 1200px;
$screen-xxl: 1600px;

// 动画
$animation-duration-base: 0.2s;
$animation-duration-slow: 0.3s;
$animation-duration-fast: 0.1s;

// z-index
$zindex-dropdown: 1050;
$zindex-sticky: 1020;
$zindex-fixed: 1030;
$zindex-modal-backdrop: 1040;
$zindex-modal: 1050;
$zindex-popover: 1060;
$zindex-tooltip: 1070;
