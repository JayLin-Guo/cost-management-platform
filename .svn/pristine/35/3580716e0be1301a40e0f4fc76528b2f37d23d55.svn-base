<template>
  <div class="workflow-timeline-container">
    <div v-if="!rawData" class="loading">
      <el-skeleton :rows="8" animated />
    </div>

    <div v-else class="timeline-wrapper" ref="timelineRef">
      <!-- 时间轴主体（可滚动） -->
      <div class="timeline-scroll-area" :style="{ width: `${totalWidth}px` }">
        <!-- 第一行：月份行 -->
        <div class="month-row">
          <div
            v-for="month in calculatedMonths"
            :key="month.id"
            class="month-cell"
            :style="{
              left: `${month.position.x}px`,
              width: `${month.position.width}px`,
            }"
          >
            <span class="month-name">{{ month.name }}</span>
            <span class="month-info">({{ month.daysCount }}天)</span>
          </div>
        </div>

        <!-- 第二行：日期行 -->
        <div class="day-row">
          <div
            v-for="day in calculatedDays"
            :key="day.date"
            class="day-cell"
            :class="{
              'is-today': day.isToday,
              'is-weekend': day.isWeekend,
              'is-holiday': day.holiday,
            }"
            :style="{
              left: `${day.position.x}px`,
              width: `${day.position.width}px`,
            }"
          >
            <div class="day-number">{{ day.day }}</div>
            <div class="day-weekday">周{{ day.weekday }}</div>
            <div v-if="day.description" class="day-description">{{ day.description }}</div>
          </div>
        </div>

        <!-- 泳道区域 -->
        <div class="swimlanes-area">
          <div
            v-for="lane in calculatedSwimlanes"
            :key="lane.id"
            class="swimlane"
            :style="{ height: `${lane.position.height}px` }"
          >
            <!-- 泳道标签（固定在左侧） -->
            <div class="lane-label">
              <div class="lane-name">{{ lane.userName }}</div>
              <div class="lane-role">{{ lane.role }}</div>
            </div>

            <!-- 节点容器 -->
            <div class="lane-content">
              <div
                v-for="node in getNodesInLane(lane.id)"
                :key="node.id"
                class="flow-node"
                :class="`status-${node.status}`"
                :style="{
                  left: `${node.position.x}px`,
                  width: `${node.position.width}px`,
                  top: `${node.position.y}px`,
                  height: `${node.position.height}px`,
                  backgroundColor: node.style.backgroundColor,
                  borderColor: node.style.borderColor,
                }"
                @click="handleNodeClick(node)"
              >
                <div class="node-content">
                  <el-icon class="node-icon">
                    <component :is="icons[node.style.icon]" />
                  </el-icon>
                  <div class="node-details">
                    <span class="node-name">{{ node.name }}</span>
                    <span class="node-assignee">{{ node.assigneeName }}</span>
                  </div>
                </div>
                <div v-if="node.progress > 0" class="progress-bar">
                  <div class="progress-fill" :style="{ width: `${node.progress}%` }"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, computed, onMounted } from 'vue'
import { Edit, View, Check, Upload, Download, Document, Close } from '@element-plus/icons-vue'
import { getTaskWorkflowData, type TaskWorkflowData } from '@/api/workflow'
import { getResponsiveConfig } from '../config/timeline.config'
import { useTimelineCalculator } from '../composables/useTimelineCalculator'

interface Props {
  taskId: number
}

const props = defineProps<Props>()

// ========== 数据和配置 ==========
const rawData = ref<TaskWorkflowData | null>(null)
const timelineRef = ref<HTMLElement>()

// 响应式配置
const screenWidth = ref(window.innerWidth)
const config = computed(() => getResponsiveConfig(screenWidth.value))

// ========== 计算引擎 ==========
const { totalWidth, calculatedMonths, calculatedDays, calculatedSwimlanes, getNodesInLane } =
  useTimelineCalculator(rawData, config.value)

// ========== 生命周期 ==========
onMounted(async () => {
  try {
    rawData.value = await getTaskWorkflowData(props.taskId)
  } catch (error) {
    console.error('加载工作流数据失败:', error)
  }
})

// ========== 事件处理 ==========
const handleNodeClick = (node: any) => {
  console.log('节点点击:', node)
  // TODO: 显示节点详情
}

// ========== Icon 映射 ==========
const icons = { Edit, View, Check, Upload, Download, Document, Close }
</script>

